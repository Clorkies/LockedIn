<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_background"
        android:rotation="180" />

    <LinearLayout
        android:id="@+id/imgAndProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:translationY="-25dp"
        >

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="45dp">

            <ImageView
                android:id="@+id/pfp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/circle_frame"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pfp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Welcome, "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Jervin"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/customizationSheet"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle_rounded_bg_dark"
        android:translationY="300dp"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="What games are you into?"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/gameGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:columnCount="3"
            android:scaleX="1.05"
            android:rowCount="2">

            <FrameLayout
                android:id="@+id/card_valorant_frame"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/card_valorant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_valorant"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/check_valorant"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_league_frame"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/card_league"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_league"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/check_league"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_csgo_frame"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/card_csgo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_csgo"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/check_csgo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_dota_frame"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/card_dota"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_dota"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/check_dota"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_mlbb_frame"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/card_mlbb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_mlbb"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/check_mlbb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card_overwatch_frame"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/card_overwatch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_overwatch"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/check_overwatch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"/>
            </FrameLayout>

        </GridLayout>

        <TextView
            android:id="@+id/selection_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="0/3 selected"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_proceed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/devbutton"
            android:fontFamily="@font/poppins"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:enabled="false"/>


    </LinearLayout>

</FrameLayout>