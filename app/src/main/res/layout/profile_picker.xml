<!-- res/layout/profile_picker.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/profile_btm_sheet">

    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/option1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/red_pfp"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/option2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_pfp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageView
            android:id="@+id/option3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/green_pfp"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp"/>
        <ImageView
            android:id="@+id/option4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/blue_pfp"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a profile picture!"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Space
        android:layout_width="0dp"
        android:layout_height="80dp"/>

</LinearLayout>
