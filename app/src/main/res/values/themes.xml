<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.LockedIn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/settingsbg</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigation</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Custom BottomNav Theme -->
    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/white</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="itemTextColor">@color/bg</item>
        <item name="itemIconTint">@null</item>
    </style>

    <style name="notiSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/devYellow</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99ffff</item>
    </style>

    <style name="activeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/devYellow</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99ffff</item>
    </style>

    <style name="privateSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/devYellow</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99ffff</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Base.Theme.LockedIn" parent="Theme.Material3.DayNight.NoActionBar"/>

</resources>